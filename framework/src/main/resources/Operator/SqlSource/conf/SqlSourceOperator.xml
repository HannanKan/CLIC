<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Operator ID="SqlSourceOperator" name="SqlSourceOperator" kind="supplier">

    <platforms>
        <platform ID="sparkSql">
            <path>Operator/SqlSource/conf/SparkSqlSourceOperator.xml</path>
        </platform>
    </platforms>

    <parameters>
        <!-- 暂定用户最多会传入3个table，也就是读取3个数据源文件 -->
        <!-- 传给Physical Plan的yaml文件里只保留用户传入table数量的参数 -->
        <parameter name="inputPath1" data_type="string" required="true"> </parameter>
        <parameter name="inputPath2" data_type="string"> </parameter>
        <parameter name="inputPath3" data_type="string"> </parameter>
        <!-- 为什么需要这个参数？因为spark sql需要用table名字给dataframe注册 -->
        <parameter name="tableName1" data_type="string"></parameter>
        <parameter name="tableName2" data_type="string"></parameter>
        <parameter name="tableName3" data_type="string"></parameter>
        <parameter name="sqlText" data_type="string" required="true"> </parameter>
<!--        <parameter kind="input" name="separator" data_type="string" default=","> </parameter>-->
    </parameters>
    <inputs>  </inputs>
    <outputs> <!-- 计算结果 -->
        <output name="result" data_type="string"> </output>
    </outputs>


</Operator>